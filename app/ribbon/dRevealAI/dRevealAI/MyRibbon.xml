<?xml version="1.0" encoding="UTF-8"?>
<!--<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="Ribbon_Load">-->
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="Ribbon_Load"
          xmlns:x="http://schemas.microsoft.com/office/2006/01/customui">
  <ribbon>
    <tabs>
      <tab idMso="TabAddIns" label="dReveal AI">
        <group id="groupEmail" label="Email AI Tools">
          <button id="btnSummarize" label="Summarize" size="large" onAction="Button_Click"
                  imageMso="ReviewAcceptChanges" supertip="Generate summary of selected email"/>
          <button id="btnSuggestReply" label="Suggest Reply" size="large" onAction="Button_Click"
                  imageMso="MailReplyToAll" supertip="Get AI-generated response suggestions"/>
          <button id="btnDraftEmail" label="Draft Response" size="large" onAction="Button_Click"
                  imageMso="MailCompose" supertip="Create a draft response using AI"/>
        </group>
        <group id="groupTools" label="Date Filters">
          <comboBox id="cmbFilterDateRange"
                   label="Date Range"
                   getItemID="GetSelectedItemID"
                   
                   onChange="OnFilterDateRangeChanged">
            <item id="filterToday" label="Today"/>
            <item id="filterYesterday" label="Yesterday"/>
            <item id="filterThisWeek" label="This Week"/>
            <item id="filterPreviousSevenDays" label="Previous Seven Days"/>
          </comboBox>
          <button id="btnFilterListEmails" label="List Emails"
                 onAction="FilterListEmails_Click" imageMso="ShowTimeSlots"/>
        </group>
        <group id="groupVIP" label="VIP Contacts">
          <comboBox id="cmbVIPContacts"
                   label="Check VIP"
                   
                   getItemCount="GetVIPContactCount"
                   getItemID="GetVIPContactId"
                   getItemLabel="GetVIPContactLabel"
                   onChange="OnVIPContactChanged" />
          <comboBox id="cmbVIPDateRange"
                   label="Date Range"
                   getItemID="GetSelectedItemID"
                    
                   onChange="OnVIPDateRangeChanged">
            <item id="vipToday" label="Today"/>
            <item id="vipYesterday" label="Yesterday"/>
            <item id="vipThisWeek" label="This Week"/>
            <item id="vipPreviousSevenDays" label="Previous Seven Days"/>
          </comboBox>
          <button id="btnCheckVIP" label="Check Emails"
                 onAction="CheckVIPEmails_Click" imageMso="ReviewShowMarkup"/>
        </group>
      </tab>
    </tabs>
  </ribbon>
</customUI>